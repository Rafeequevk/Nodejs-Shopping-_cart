<section>
        <div class="container mt-4">
            <div class="row justify-content">
                <div class="col-md-6">
                    <form action="/admin/add-products" method="post" enctype="multipart/form-data">
                        <fieldset>
                            <legend>Add products</legend>
                            <label for="pname" class="form-label">Product Name :</label><br>
                            <input type="text" id="pname" name="pname" class="form-control"><br>

                            <label for="category" class="form-label">Category : </label><br>
                            <input type="text" id="category" name="category" class="form-control"><br>

                            <label for="descreption">Descreption: </label><br>
                            <input type="text-area" id="descreption" name="descreption" class="form-control"><br>

                            <label for="img">Product Image </label><br>
                            <input type="file" name="img" id="img" class="form-control"><br>


                            <input type="submit" value="Submit" class="btn btn-success mt-4">

                        </fieldset>

                    </form>

                </div>
            </div>

        </div>
    </section>